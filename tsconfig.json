{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "constants/*": ["./constants/*"],
      "assets/*": ["./assets/*"],
      "styles/*": ["./styles/*"],
      "hooks/*": ["./hooks/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"],
      "contexts/*": ["./contexts/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "typeRoots": ["src/@types"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
